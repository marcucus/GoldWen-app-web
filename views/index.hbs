    <!-- Theme Detection Script - Must be in head to prevent FOUC -->
    <script>
        // Theme detection and application - prevents FOUC
        (function() {
            const getTheme = () => {
                const saved = localStorage.getItem('goldwen-theme');
                if (saved && saved !== 'system') return saved;
                return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
            };
            
            const applyTheme = (theme) => {
                document.documentElement.classList.toggle('dark', theme === 'dark');
            };
            
            // Apply theme immediately
            const currentTheme = getTheme();
            applyTheme(currentTheme);
            
            // Set initial theme preference
            window.__goldwen_theme = localStorage.getItem('goldwen-theme') || 'system';
        })();
    </script>
    
    <!-- Structured Data for SEO -->
