                        <span class="text-white font-bold text-sm">G</span>
                    </div>
                    <span class="font-serif font-bold text-xl text-gray-text hover:text-gold-primary transition-colors duration-300">{{app.name}}</span>
                </div>
                
                <!-- Desktop menu -->
